    <menuitem name="Production" id="dlc_production_menu" parent="dlc_root_menu"
              sequence="4" action="action_dlc_production"/>

    <menuitem name="Settings" id="dlc_settings_menu" parent="dlc_root_menu"
              sequence="5" />

    <menuitem name="Dlcs" id="dlc_dlcs_menu" parent="dlc_settings_menu"
              sequence="1" action="action_dlc_dlcs"/>

    <menuitem name="States" id="dlc_states_menu" parent="dlc_settings_menu"
              sequence="2" action="action_dlc_states"/>

    <menuitem name="Lgas" id="dlc_lga_menu" parent="dlc_settings_menu"
              sequence="3" action="action_dlc_lga"/>

    <menuitem name="IssueTypes" id="dlc_issuetypes_menu" parent="dlc_settings_menu"
              sequence="4" action="action_dlc_issuetypes"/>

    <menuitem name="Personnel" id="dlc_personnel_menu" parent="dlc_settings_menu"
              sequence="5" action="action_dlc_personnel"/>




